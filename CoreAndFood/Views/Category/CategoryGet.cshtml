@model CoreAndFood.Data.Models.Category
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CategoryGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<form asp-controller="Category" asp-action="CategoryUpdate" method="post">
    <h1>Category Update</h1>
    <br />
    <b>Category ID</b>
    <br />
    <input asp-for="CategoryID" class="form-control" readonly/>
    <br />
    <b>Name</b>
    <br />
    <input asp-for="Name" class="form-control" /> <span asp-validation-for="Name" class=" alert-danger"></span>
    <br />
    <b>Description</b>
    <br />
    <input asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-warning">Update</button>
</form>
